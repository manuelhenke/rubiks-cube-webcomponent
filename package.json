{
  "name": "base-js-template",
  "version": "0.0.1",
  "private": true,
  "description": "Extends the base-template to provide features like npm, yarn, prettier, husky, eslint, ci workflows and tests",
  "keywords": [
    "javascript"
  ],
  "homepage": "https://github.com/manuelhenke/base-js-template",
  "bugs": {
    "url": "https://github.com/manuelhenke/base-js-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuelhenke/base-js-template.git"
  },
  "license": "MIT",
  "author": {
    "name": "Manuel Henke",
    "email": "contact@henkebyte.com",
    "url": "https://henkebyte.com/"
  },
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src"
  ],
  "scripts": {
    "dev": "node ./src/index.js",
    "build": "echo \"No build script specified\"",
    "start": "echo \"No start script specified\"",
    "lint": "yarn lint:js && yarn lint:prettier",
    "lint:js": "eslint --ext \".js,.jsx,.mjs,.cjs,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check --ignore-path .gitignore .",
    "lintfix": "yarn lint:js --fix && prettier --write --list-different --ignore-path .gitignore . ",
    "prepare": "husky install",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.21.8",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-babel": "^0.2.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.8"
  }
}
